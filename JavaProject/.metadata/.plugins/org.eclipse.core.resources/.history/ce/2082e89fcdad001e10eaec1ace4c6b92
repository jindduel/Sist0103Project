package day0108;

public class For_07 {
	public static void main(String[] args) {
		//while for 비교
		
		//while
		System.out.println("while문 10 ~ 0");
		int i = 10;
		
		while(i >= 0) System.out.print(i-- + " ");
		System.out.println();

		System.out.println("while문 1 ~ 10");
		i = 1;
		while(i <= 10) System.out.print(i++ + " ");
		
		//for
		System.out.println("for문 10 ~ 0");
		for(int a = 10; a >= 0; a--) System.out.print(a + " ");
		System.out.println();
		
		System.out.println("for문 1 ~ 10");
		for(int a = 1; a <= 10; a++) System.out.print(a + " ");
		System.out.println();
		
	}
}
