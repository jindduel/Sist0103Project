		loop1 :
		for(int i = 2; i <= 9; i++) {
			for(int j = 1; j <= 9; j++) {
				if(j >= 5) break loop1;
				System.out.println(i + " x " + j + " = " + (i * j));
			}
			System.out.println();
		}
		System.out.println();
		
		System.out.println("Q. 단을 입력하면 해당 단이 나오게 해주세요. ");
		System.out.println("단을 입력해주세요. ");
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		
		System.out.println("[ " + n + "단 ]");
		for(int i = 1; i <= 9; i++) System.out.println(n + " x " + i + " = " + (n * i));
		
		
	}
