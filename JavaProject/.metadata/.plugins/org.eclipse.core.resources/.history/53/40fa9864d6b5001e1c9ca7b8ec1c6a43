package day0118;

import java.awt.Color;
import java.awt.Container;
import java.awt.Font;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JTextField;
import javax.swing.border.EmptyBorder;
import javax.swing.border.LineBorder;
import javax.swing.border.TitledBorder;
import javax.swing.plaf.FontUIResource;

//2개의 텍스트필드에 숫자를 넣고 버튼을 클릭하면 라벨에 결과 출력 (ex. 2 + 3 = 5)

public class SwingTextF_10 extends JFrame {
	Container cp;
	JTextField tfNum1, tfNum2;
	JButton btnAdd, btnM, btnG, btnN;
	JLabel lblNum1, lblNum2, lblResult;

	public SwingTextF_10() {
		super("텍스트 필드 문제");
		cp = this.getContentPane();

		this.setBounds(800, 100, 500, 300);
		cp.setBackground(new Color(204, 204, 204));

		initDesign();

		this.setVisible(true);
	}

	public void initDesign() {
		this.setLayout(null);
		lblNum1 = new JLabel("숫자 1");	
		lblNum2 = new JLabel("숫자 2");	

		lblNum1.setBounds(20, 20, 50, 30);
		this.add(lblNum1);

		lblNum2.setBounds(20, 60, 50, 30);
		this.add(lblNum2);

		tfNum1 = new JTextField();
		tfNum1.setBounds(80, 20, 60, 30);
		this.add(tfNum1);

		tfNum2 = new JTextField();
		tfNum2.setBounds(80, 60, 60, 30);
		this.add(tfNum2);

		btnAdd = new JButton("+");
		btnAdd.setBounds(20, 110, 50, 50);
		this.add(btnAdd);

		btnAdd = new JButton("-");
		btnAdd.setBounds(80, 110, 50, 50);
		this.add(btnAdd);

		btnAdd = new JButton("*");
		btnAdd.setBounds(140, 110, 50, 50);
		this.add(btnAdd);

		btnAdd = new JButton("/");
		btnAdd.setBounds(200, 110, 50, 50);
		this.add(btnAdd);

		lblResult = new JLabel("결과 나오는 곳..");
		lblResult.setBounds(20, 170, 250, 60);
		lblResult.setBorder(new TitledBorder(new LineBorder(Color.BLACK, 2), "결과확인"));
		lblResult.setFont(new FontUIResource("", Font.BOLD, 25));
		this.add(lblResult);

		//익명내부클래스
		btnAdd.addActionListener(new ActionListener() {

			@Override
			public void actionPerformed(ActionEvent e) {
				int num1 = Integer.parseInt(tfNum1.getText().trim());
				int num2 = Integer.parseInt(tfNum2.getText().trim());
				int sum = num1 + num2;

				lblResult.setText(num1 + " + " + num2 + " = " + sum);
			}
		});

		btnM.addActionListener(new ActionListener() {

			@Override
			public void actionPerformed(ActionEvent e) {
				int num1 = Integer.parseInt(tfNum1.getText().trim());
				int num2 = Integer.parseInt(tfNum2.getText().trim());
				int sum = num1 - num2;

				lblResult.setText(num1 + " - " + num2 + " = " + sum);
			}
		});

		btnG.addActionListener(new ActionListener() {

			@Override
			public void actionPerformed(ActionEvent e) {
				int num1 = Integer.parseInt(tfNum1.getText().trim());
				int num2 = Integer.parseInt(tfNum2.getText().trim());
				int sum = num1 * num2;

				lblResult.setText(num1 + " * " + num2 + " = " + sum);
			}
		});

		btnN.addActionListener(new ActionListener() {

			@Override
			public void actionPerformed(ActionEvent e) {
				int num1 = Integer.parseInt(tfNum1.getText().trim());
				int num2 = Integer.parseInt(tfNum2.getText().trim());
				int sum = num1 / num2;

				lblResult.setText(num1 + " / " + num2 + " = " + sum);
			}
		});

	}

	public static void main(String[] args) {
		new SwingTextF_10();
	}
}

